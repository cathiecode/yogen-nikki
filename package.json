{
  "main": "build/index.js",
  "author": "cathiecode",
  "license": "CC0-1.0",
  "private": "true",
  "type": "module",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --outfile=build/index.js --sourcemap --platform=node",
    "dev": "concurrently 'esbuild src/index.ts --outfile=build/index.js --sourcemap --platform=node --watch' 'nodemon'",
    "format": "prettier --ignore-path .gitignore -w **/*.{ts,js,json}",
    "prepare": "husky install",
    "start": "migrate-mongo up && node build/index.js"
  },
  "dependencies": {
    "@fastify/cors": "^8.1.0",
    "@fastify/sensible": "^5.1.1",
    "date-fns": "^2.29.3",
    "fastify": "^4.8.1",
    "mongodb": "^4.10.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "uuid": "^9.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "concurrently": "^7.4.0",
    "esbuild": "^0.15.11",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^29.2.0",
    "lint-staged": "^13.0.3",
    "migrate-mongo": "^9.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": "18.x"
  }
}
